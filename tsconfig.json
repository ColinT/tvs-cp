{
  "compilerOptions": {
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "common/*": ["./src/common/*"],
      "client/*": ["./src/client/*"],
      "server/*": ["./src/server/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  },
  "include": [
    "./src"
  ]
}
